{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="text-center">
                <h1>Listes des amies </h1>
            </div>
        </div>
        <div class="row">

            {% for amie in amies %}

                <div class="col-xs-6 col-sm-3 margin-top-20">

                    <div class="col-md-12">
                        <h2>l'age : {{amie.age}}</h2>
                        <h3>la famille : {{amie.famille}}</h3>
                        <p>le race :{{amie.race}}</p>
                        <p style="color: blue">la nourriture :{{amie.nourriture}} </p>
                    </div>

                </div>
            </div>

        {% endfor %}

    </div>



</div>

</div>
{% endblock %}
