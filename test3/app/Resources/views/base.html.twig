<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, maximum-scale=1">
        <title>{% block title %}Bonobo Friends{% endblock %}</title>

        <link href="{{asset("/css/bootstrap.css")}}" rel="stylesheet" type="text/css">
        <link href="{{asset("/css/style.css")}}" rel="stylesheet" type="text/css">
        <link href="{{asset("/css/linecons.css")}}" rel="stylesheet" type="text/css">
        <link href="{{asset("/css/font-awesome.css")}}" rel="stylesheet" type="text/css">
        <link href="{{asset("/css/responsive.css")}}" rel="stylesheet" type="text/css">
        <link href="{{asset("/css/animate.css")}}" rel="stylesheet" type="text/css">

        <link href='http://fonts.googleapis.com/css?family=Lato:400,900,700,700italic,400italic,300italic,300,100italic,100,900italic' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Dosis:400,500,700,800,600,300,200' rel='stylesheet' type='text/css'>


        <script type="text/javascript" src="{{asset("/js/jquery.1.8.3.min.js")}}"></script>
        <script type="text/javascript" src="{{asset("/js/bootstrap.js")}}"></script>
        <script type="text/javascript" src="{{asset("/js/jquery-scrolltofixed.js")}}"></script>
        <script type="text/javascript" src="{{asset("/js/jquery.easing.1.3.js")}}"></script>
        <script type="text/javascript" src="{{asset("/js/jquery.isotope.js")}}"></script>
        <script type="text/javascript" src="{{asset("/js/wow.js")}}"></script>
        <script type="text/javascript" src="{{asset("/js/classie.js")}}"></script>

    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body >
    <header>
        <div class="container">
            <div class="header_section">
                <div class="logo"><a href="javascript:void(0)"><img src="img/bonobo-logo.jpg" alt="" width="50%" height="50%"></a></div>
                <nav class="nav" id="nav">
                    <ul class="">

                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <li>
                                <a href="{{path('afficher')}}">Liste des amies</a>
                            </li>
                            <li>
                                <a href="{{path('ajouter')}}">Ajouter un amie</a>
                            </li>
                            <li>
                                <a href="{{path('modifier')}}">modifier un amie</a>
                            </li>

                            <li>
                                <a class="btn btn-info" href="{{ path('fos_user_security_logout') }}">Deconnexion</a>
                            </li>
                        {% else %}
                            <li>
                                {% include 'login.html.twig' %}
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>

            <div>
                <img  src="img/foret.jpg" alt="" width="200%" height="200%">
            </div>
    </header>

{% block body %}{% endblock %}

<footer class="footer_section" id="contact">

    <div class="container">
        <div class="footer_bottom"> <span>By <a>MCHICHOU Nisrine 2016-2017</a></span> </div>
    </div>
</footer>

{% block javascripts %}{% endblock %}

</body>
</html>
